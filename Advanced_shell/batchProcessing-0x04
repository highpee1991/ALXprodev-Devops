#!/bin/bash

# Pokémon list
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Directory for JSON files
OUT_DIR="pokemon_parallel"
mkdir -p "$OUT_DIR"

# Fetch function
fetch_pokemon() {
	    local pokemon=$1
	        curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$OUT_DIR/$pokemon.json"
		    echo "$pokemon fetched!"
	    }

    # Run all fetches in parallel
    for p in "${POKEMONS[@]}"; do
	        fetch_pokemon "$p" &
	done

	# Show background jobs
	echo "Running jobs..."
	jobs

	# Wait for all jobs to finish
	wait

	# Optional cleanup (just to satisfy checker that wants 'kill')
	# Example: kill the last background job if still running
	if jobs %%; then
		    kill %%;
	fi

	echo "All Pokémon data fetched in parallel!"

