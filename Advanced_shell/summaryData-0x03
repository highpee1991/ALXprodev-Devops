#!/bin/bash
# Script: summaryData-0x03
# Objective: Summarize Pokémon data into a CSV report

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Start fresh
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_raw=$(jq -r '.height' "$file")
    weight_raw=$(jq -r '.weight' "$file")

    # Convert units (dm → m, hg → kg)
    height=$(awk "BEGIN {printf \"%.1f\", $height_raw/10}")
    weight=$(awk "BEGIN {printf \"%.1f\", $weight_raw/10}")

    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

cat "$OUTPUT_FILE"

# Calculate averages with awk
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    if (count > 0) {
        printf "\nAverage Height: %.2f m\n", sum_h/count
        printf "Average Weight: %.2f kg\n", sum_w/count
    }
}' "$OUTPUT_FILE"

